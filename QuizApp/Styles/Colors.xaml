<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QuizApp">
    <Color x:Key="ColorPrimary" >#2D3E50</Color>
    <SolidColorBrush x:Key="ColorPrimaryBrush" Color="{StaticResource ColorPrimary}"/>

    <Color x:Key="WindowBorderCoor" >#21283E</Color>
    <SolidColorBrush x:Key="WindowBorderCoorBrush" Color="{StaticResource WindowBorderCoor}"/>

    <Color x:Key="PurpleLighter" >#2f577f</Color>
    <SolidColorBrush x:Key="PurpleLighterCoorBrush" Color="{StaticResource PurpleLighter}"/>

    <Color x:Key="DarkBlue" >#103f6e</Color>
    <SolidColorBrush x:Key="DarkBlueCoorBrush" Color="{StaticResource DarkBlue}"/>
</ResourceDictionary>